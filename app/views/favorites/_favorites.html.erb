<% if favorites.any? %>
  <ul class="media-list">
    <% @user.favoritings.each do |favorite| %>
      <li class="media">
        
        <div class="media-body">

          <div>
            <%= favoriting.micropost.content %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(@users) %></p>
          </div>
          
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate favorites %>
<% end %>